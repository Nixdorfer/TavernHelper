{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Tavern",
  "version": "0.1.0",
  "identifier": "com.tavern.app",
  "bundle": {
    "active": true,
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/icon.ico"]
  },
  "build": {
    "beforeDevCommand": {
      "cwd": "../src-vue",
      "script": "set VITE_BACKEND=tauri && npm run dev"
    },
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": {
      "cwd": "../src-vue",
      "script": "set VITE_BACKEND=tauri && npm run build"
    },
    "frontendDist": "../src-vue/dist/pc"
  },
  "app": {
    "windows": [
      {
        "title": "Tavern",
        "width": 1200,
        "height": 800,
        "minWidth": 1250,
        "minHeight": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
